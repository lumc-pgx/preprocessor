rule haplotypes:
    input: 
        a = "preprocessor/CCS_Amplicon/{barcode}/haplotypes/{barcode}.fasta",
        q = "preprocessor/CCS_Amplicon/{barcode}/haplotypes/{barcode}.fastq"
    output:
        a = "preprocessor/CCS_Amplicon/haplotypes/{barcode}.fasta",
        q = "preprocessor/CCS_Amplicon/haplotypes/{barcode}.fastq"
    shell:
        "ln -sr {input.a} {output.a} && "
        "ln -sr {input.q} {output.q}"
